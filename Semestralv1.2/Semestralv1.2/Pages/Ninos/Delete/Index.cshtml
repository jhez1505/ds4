@page "{id:int}"
@model Semestralv1._2.Pages.Ninos.Delete.DeleteModel

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Eliminar Niño</h3>
    </div>

    <div class="card-body">
        <p class="text-danger">
            ⚠️ ¿Seguro que deseas eliminar este niño?
        </p>

        <ul class="list-group">
            <li class="list-group-item"><strong>Nombre:</strong> @Model.Nino.Nombre</li>
            <li class="list-group-item"><strong>Apellido:</strong> @Model.Nino.Apellido</li>
            <li class="list-group-item"><strong>Padre ID:</strong> @Model.Nino.ParentID</li>
        </ul>
    </div>

    <div class="card-footer">
        <form method="post">
            <input type="hidden" asp-for="Nino.ChildID" />
            <button class="btn btn-danger">Eliminar</button>
            <a asp-page="/Ninos/Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
