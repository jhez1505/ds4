@page "{id:int}"
@model Semestralv1._2.Pages.Ninos.Edit.EditModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Editar Niño</h3>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Nino.ChildID" />

        <div class="card-body">
            <input asp-for="Nino.ParentID" class="form-control mb-2" />
            <input asp-for="Nino.Nombre" class="form-control mb-2" />
            <input asp-for="Nino.Apellido" class="form-control mb-2" />
            <input asp-for="Nino.FechaNacimiento" type="date" class="form-control mb-2" />
            <input asp-for="Nino.CondicionMedica" class="form-control mb-2" />
            <input asp-for="Nino.Alergias" class="form-control mb-2" />
        </div>

        <div class="card-footer">
            <button class="btn btn-warning">Actualizar</button>
            <a asp-page="/Ninos/Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
