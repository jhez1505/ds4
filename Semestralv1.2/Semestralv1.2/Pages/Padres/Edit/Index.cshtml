@page "{id:int}"
@model Semestralv1._2.Pages.Padres.Edit.EditModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Editar Padre</h3>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Padre.ParentID" />

        <div class="card-body">
            <input asp-for="Padre.Cedula" class="form-control mb-2" />
            <input asp-for="Padre.Nombre" class="form-control mb-2" />
            <input asp-for="Padre.Apellido" class="form-control mb-2" />
            <input asp-for="Padre.Telefono" class="form-control mb-2" />
        </div>

        <div class="card-footer">
            <button class="btn btn-warning">Actualizar</button>
            <a asp-page="/Padres/Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

